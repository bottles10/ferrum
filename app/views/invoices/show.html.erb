<% content_for :title, "Showing invoice" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="no-print font-bold text-4xl">Showing invoice</h1>

  <%= render @invoice %>

  <%= link_to "Download invoice", rails_blob_path(@invoice.pdf, disposition: "attachment"), target: :_blank, class: "no-print mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" if @invoice.pdf.attached? %>
  <%= link_to "View invoice", rails_blob_path(@invoice.pdf, disposition: "inline"), target: :_blank, class: "no-print mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" if @invoice.pdf.attached? %>
  <%= link_to "Edit invoice", edit_invoice_path(@invoice), class: "no-print mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" if @invoice.pdf.attached? %>
  <%= link_to "Back to Invoices", invoices_path, class: "no-print mt-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" if @invoice.pdf.attached? %>
  <%= button_to "Destroy this invoice", @invoice, method: :delete, class: "no-print mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  </div>
</div>
